<html>
<head>
</head>
<body>
  <section class="content-header">
    <h1>
      Absensi Murid
      <small>lihat Data Absensi Murid</small>
    </h1>
    <ol class="breadcrumb">
      <li class = "active"><a href="#"><i class="fa fa-database"></i> Data Absensi Murid</a></li>
    </ol>
  </section>
  <div class="box-header">
    <button class="btn btn-danger" ng-click="hapus()"><i class="fa fa-trash"></i> Hapus Absen</button>
    <button class="btn btn-success" ng-click="cetakxlsx()"><i class="fa fa-file-excel-o"></i> Cetak Laporan Absensi</button>
  </div>
  <div class ="box-body">
    <div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Input data Absen</h4>
        </div>
        <div class="modal-body">
          <div class="form-group">
          <label>Keterangan</label>
          <select class="form-control" ng-model="ket">
            <option value="izin">Izin</option>
            <option value="alfa">Alfa</option>
            <option value="sakit">Sakit</option>
          </select>
          </div>
              </div>
        <div class="modal-footer">
          <button class="btn btn-primary" ng-click="tambah()"><i class="fa fa-send"></i> Submit</button>
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </div>

    </div>
  </div>
  <table datatable="ng" dt-columns="dtColumns"dt-options="dtOptions"class="table table-bordered table-striped">
  <thead>
  <th><input type="checkbox" ng-click="checkall()"></th>
  <th>Nama Murid</th>
  <th>Kelas</th>
  <th>Alfa</th>
  <th>Izin</th>
  <th>Sakit</th>
  <th>Masuk</th>
  <th>Action</th>
</thead>
  <tbody>
  <tr ng-repeat="item in absensimurid">
  <td> <input type="checkbox"  checklist-model="user.hapusabsensimurid" checklist-value="item._id" role></td>
  <td>{{item.nama}}</td>
  <td>{{item.kelas}}</td>
  <td>{{item.alfa}}</td>
  <td>{{item.izin}}</td>
  <td>{{item.sakit}}</td>
  <td>{{item.masuk}}</td>
  <td><button class="btn btn-primary" data-toggle="modal" ng-click="edit(item)" data-target="#myModal"><i class="fa fa-plus"></i> Input Absen</button></td>
  </tr>
  </tbody>
  </table>

  </div>
</body>
</html>
